@model EgeAlpProject.Models.Comment

@{
    ViewData["Title"] = "Edit";
}
    <div class="categories-area" style="padding-top:40px ; padding-bottom:40px">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h1>Edit</h1>
                    <h4>Comment</h4>
                </div>
                <div  style="padding-left:50px" class="col-md-7">
                    <h1>Car</h1>
                    <h4>Details</h4>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Detail" class="control-label"></label>
                            <input asp-for="Detail" class="form-control" />
                            <span asp-validation-for="Detail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedDate" class="control-label"></label>
                            <p>@Model.CreatedDate</p>
                        </div>
                        <div class="form-group" hidden>
                            <label hidden asp-for="CarId" class="control-label"></label>
                            <select hidden asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                            <span hidden asp-validation-for="CarId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn-outline-dark" /> 
                            <a style="margin-left:10px" class="btn-outline-dark" asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId">Cancel</a>
                        </div>
                    </form>
                </div>
                <div style="padding-left:50px" class="col-md-7">
                    <div class="form-group">
                        <strong><label asp-for="@Model.Car.Name" class="control-label"></label></strong>
                        <p>@Model.Car.Name</p>
                    </div>
                    <div class="form-group">
                        <strong><label class="control-label">Photo of Car</label></strong>
                        <div>
                            @{
                                var imageUrl = @Model.Car.CarImages?.FirstOrDefault()?.FileName ?? "noimage.jpg";
                            }
                            <div class="d-flex flex-column align-items-center justify-content-center"><img src="~/UserImages/@imageUrl" alt="" style="width:600px ; padding-top:10px ; height:430px"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div></div>

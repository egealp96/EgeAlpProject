@model EgeAlpProject.Models.Comment

@{
    ViewData["Title"] = "Delete";
}


<div class="categories-area" style="padding-top:40px ; padding-bottom:40px">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h1>Delete</h1>
                <h3>Are you sure you want to delete this?</h3>
            </div>
            <div style="padding-left:50px" class="col-md-7">
                <h1>Car</h1>
                <h3>Details</h3>
            </div>
        </div>
        <div>
            <h4>Comment</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Detail)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Detail)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Rating)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Rating)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Car.Name)
                    </div>
                    <form asp-action="Delete" class="col-sm-10" style="padding-top:40px">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn-outline-danger" />
                        <a style="margin-left:10px" asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId" class="btn-outline-dark">Cancel</a>
                    </form>
                </div>
                <div style="padding-left:50px" class="col-md-7">
                    <div class="form-group">
                        <strong><label asp-for="@Model.Car.Name" class="control-label"></label></strong>
                        <p>@Model.Car.Name</p>
                    </div>
                    <div class="form-group">
                        <strong><label class="control-label">Photo of Car</label></strong>
                        <div>
                            @{
                                var imageUrl = @Model.Car.CarImages?.FirstOrDefault()?.FileName ?? "noimage.jpg";
                            }
                            <div class="d-flex flex-column align-items-center justify-content-center"><img src="~/UserImages/@imageUrl" alt="" style="width:600px ; padding-top:10px ; height:430px"></div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

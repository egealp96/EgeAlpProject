@model EgeAlpProject.Models.Rental

@{
    ViewData["Title"] = "Details";
}
<div class="categories-area" style="padding-top:40px ; padding-bottom:40px">
    <div class="container">
        <h1>Details</h1>

        <div>
            <h4>Rental</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Car)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Car.CarModel)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateRented)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateRented)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateReturned)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateReturned)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TotalPrice)
                </dd>

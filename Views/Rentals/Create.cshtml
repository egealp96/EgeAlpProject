@model EgeAlpProject.Models.Rental

@{
    ViewData["Title"] = "Create";
}

<div class="categories-area" style="padding-top:40px ; padding-bottom:40px">
    <div class="container">

        <h1>Create</h1>

        <h4>Rental</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" hidden>
                        <label hidden asp-for="CarId" class="control-label"></label>
                        <select hidden asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateRented" class="control-label"></label>
                        <input asp-for="DateRented" class="form-control" />
                        <span asp-validation-for="DateRented" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateReturned" class="control-label"></label>
                        <input asp-for="DateReturned" class="form-control" />
                        <span asp-validation-for="DateReturned" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalPrice" class="control-label"></label>
                        <input asp-for="TotalPrice" class="form-control" />
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn-outline-dark" />
                        <a style="margin-left:10px" asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId" class="btn-outline-dark">Cancel</a>
                    </div>
                </form>
            </div>
        </div>



    </div>
</div>
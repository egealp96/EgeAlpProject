@model EgeAlpProject.Models.CarBrand

@{
    ViewData["Title"] = Model.Name;
}



<body style="overflow: visible;">
    <main>
        <div class="categories-area" style="padding-top:40px">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Section Tittle -->
                        <div class="section-tittle text-center mb-80">
                            <div class="comment-count"></div>
                            <a asp-action="Index"><h4>Back to List</h4></a>
                            <span>@Model.Cars.Count Rental Cars Found</span>
                            <h2>@Model.Name</h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                        @foreach (var item in Model.Cars)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="single-cat text-center mb-50">
                                    <div class="cat-icon">
                                        <a class="btn-outline-dark" asp-controller="Cars" asp-action="Edit" asp-route-id="@item.Id">Edit</a> <a>|</a>
                                        <a class="btn-outline-dark" asp-controller="Cars" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <span>
                                            @{
                                                var imageUrl = item.CarImages?.FirstOrDefault()?.FileName ?? "noimage.jpg";
                                            }
                                            <div class="d-flex flex-column align-items-center justify-content-center"><a class="btn-outline-dark" asp-action="Details" asp-route-id="@item.Id"><img src="~/UserImages/@imageUrl" alt=""style="width:100%"></a></div>
                                        </span>
                                    </div>
                                    <div class="cat-cap">

                                        <h4>@item.CarBrand.Name | @item.CarModel</h4>
                                        <h4>@item.city</h4>
                                        <h6>Daily</h6>
                                        <h4>@item.Price USD</h4>
                                        <p><a class="btn-outline-dark" asp-controller="Cars" asp-action="Details" asp-route-id="@item.Id">Details</a></p>
                                        <p><i class="fa fa-comments"></i> @item.Comments.Count Comments</p>


                                    </div>
                                </div>
                            </div>
                        }
                    </div>
            </div>
        </div>
    </main>
</body>


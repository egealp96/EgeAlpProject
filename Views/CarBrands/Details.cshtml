@model EgeAlpProject.Models.CarBrand

@{
    ViewData["Title"] = Model.Name;
}



<body style="overflow: visible;">
    <main>
        <div class="categories-area" style="padding-top:40px">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Section Tittle -->
                        <div class="section-tittle text-center mb-80">
                            <div class="comment-count"></div>
                            <a asp-action="Index"><h4>Back to List</h4></a>
                            <span>@Model.Cars.Count Rental Cars Found</span>
                            <h2>@Model.Name</h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @foreach (var car in Model.Cars)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="single-cat text-center mb-50">
                                <div class="cat-icon">
                                    <span>
                                        @{
                                            var imageUrl = car.CarImages?.FirstOrDefault()?.FileName ?? "noimage.jpg";
                                        }
                                        <a asp-action="Details" asp-route-id="@car.Id"><div class="d-flex flex-column align-items-center justify-content-center"><img src="~/UserImages/@imageUrl" alt="" style="width:100%"></div></a>
                                    </span>
                                </div>
                                <div class="cat-cap">

                                    <h4>@car.CarBrand.Name | @car.CarModel | @car.Tansmission</h4>
                                    <p><a class="btn-outline-dark" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">Details</a></p>

                                    <a class="btn-outline-dark" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id">Edit</a> <a>|</a>
                                    <a class="btn-outline-dark" asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</body>




<h1>Details</h1>

<div>
    <h4>CarBrand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

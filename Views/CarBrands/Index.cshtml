@model IEnumerable<EgeAlpProject.Models.CarBrand>

@{
    ViewData["Title"] = "Index";
}

<html class="js sizes no-customelements history pointerevents postmessage webgl websockets cssanimations csscolumns csscolumns-width csscolumns-span csscolumns-fill csscolumns-gap csscolumns-rule csscolumns-rulecolor csscolumns-rulestyle csscolumns-rulewidth csscolumns-breakbefore csscolumns-breakafter csscolumns-breakinside flexbox picture srcset webworkers" lang="zxx">

<body style="overflow: visible;">
    <!--? Preloader Start -->
    <!-- Preloader Start -->

    <main>
        <!--? slider Area Start-->
        <!-- slider Area End-->
        <!--? Categories Area Start -->
        <div class="categories-area" style="padding-top:40px">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Section Tittle -->
                        <div class="section-tittle text-center mb-80">
                            <span>Current Car Brands List</span>
                            <h2>All Car Brands</h2>
                        </div>
                        <div style="padding-bottom:40px"><a class="btn-outline-dark" asp-controller="CarBrands" asp-action="Create">Create New Car Brand</a></div>
                    </div>
                </div>

                <div class="row">
                    @foreach (var carBrand in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="single-cat text-center mb-50">
                                <div class="cat-icon">
                                    <a class="btn-outline-dark" asp-action="Edit" asp-route-id="@carBrand.Id">Edit</a> <a>|</a>
                                    <a class="btn-outline-dark" asp-action="Delete" asp-route-id="@carBrand.Id">Delete</a>
                                    <span>
                                        @{
                                            var imageUrl = carBrand.CarBrandImages?.FirstOrDefault()?.FileName ?? "noimage.jpg";

                                        }
                                        <a asp-action="Details" asp-route-id="@carBrand.Id"><div class="d-flex flex-column align-items-center justify-content-center"><img src="~/CarBrandImages/@imageUrl" alt="" style="width:200px ; height:200px"></div></a>
                                    </span>
                                </div>
                                <div class="cat-cap">

                                    <h4>@carBrand.Name</h4>
                                    <p><a class="btn-outline-dark" asp-action="Details" asp-route-id="@carBrand.Id">All Cars</a></p>
                                    <p><i class="ti-car"></i> @carBrand.Cars.Count Cars</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</body>
</html>





@model EgeAlpProject.Models.Car
@{
    ViewData["Title"] = "ManageImage";
}
    <div class="categories-area" style="padding-top:40px ; padding-bottom:40px">
        <div class="container">
            <h1>Manage Image</h1>

            <div>
                <h4>Car</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CarBrand)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CarBrand.Name)
                    </dd>

                </dl>



                @foreach (var image in Model.CarImages)
                {
                    <ul style="height:250px ; width:400px">
                        <li>
                            <img style="height:200px ; width:400px" src="~/UserImages/@image.FileName" />
                        </li>
                        <li style="text-align:center">
                            @image.FileName
                        </li>
                    </ul>
                }



                <form asp-action="UploadImage" enctype="multipart/form-data" style="padding-top:20px">
                    <input type="hidden" name="CarId" id="CarId" value="@Model.Id" />
                    <input type="file" name="ImageFile" id="ImageFile" />
                    <input type="submit" value="Upload" />
                </form>
            </div>
            <div style="padding-top:20px">
                <a class="btn-outline-dark" asp-controller="Cars" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> | 
                <a class="btn-outline-dark" asp-action="Index">Save</a>
            </div>
            </div>
</div>